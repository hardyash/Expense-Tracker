@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle me-2"></i>Delete Category</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-warning me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this category? This action cannot be undone.
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">Icon:</dt>
                    <dd class="col-sm-9">
                        <span style="font-size: 2rem;">@Html.DisplayFor(model => model.Icon)</span>
                    </dd>
                    
                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                    
                    <dt class="col-sm-3">Type:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Type == "Income" ? "bg-success" : "bg-danger") fs-6">
                            @Html.DisplayFor(model => model.Type)
                        </span>
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
